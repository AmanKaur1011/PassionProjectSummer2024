@model PassionProjectSummer2024.Models.PositionDto
@{
    ViewBag.Title = "DeleteConfirm";
}

<h2  class="text-center display-4">Are you sure you want to delete this Position?</h2>
<a  class="d-inline-flex focus-ring py-1 px-2 text-decoration-none border rounded-2 mb-4" href="/Position/List">Cancel</a>
<h2 class="text-center text-danger-emphasis display-6">@Model.PositionTitle :Id - @Model.PositionId</h2>
<div class=" text-center fs-6">Hourly Wage: @Model.HourlyWage </div>

<form action="/Position/Delete/@Model.PositionId" method="POST">
    <input type="submit" class="btn btn-danger text-center" value="Confirm Delete" />

</form>

