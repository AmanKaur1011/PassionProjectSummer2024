@model PassionProjectSummer2024.Models.PositionDto
@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Are you sure you want to delete this Position?</h2>
<a href="/Position/List">Cancel</a>
<h2>@Model.PositionTitle :Id - @Model.PositionId</h2>
<div>Hourly Wage: @Model.HourlyWage </div>

<form action="/Position/Delete/@Model.PositionId" method="POST">
    <input type="submit" value="Confirm Delete" style="background-color:orangered; color:white"/>

</form>

