@model PassionProjectSummer2024.Models.DepartmentDto
@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Are you sure you want to delete this Department?</h2>
<a href="/Department/List">Cancel</a>
<h2>@Model.DepartmentName :Id - @Model.DepartmentId</h2>
<div>Department Manager: @Model.DepartmentManager </div>

<form action="/Department/Delete/@Model.DepartmentId" method="POST">
    <input type="submit" value="Confirm Delete" style="background-color:orangered; color:white" />

</form>

