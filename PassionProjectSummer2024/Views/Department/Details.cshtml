@model PassionProjectSummer2024.Models.ViewModels.DetailsDepartment
@{
    ViewBag.Title = "Details";
}
<style>

    .button {
        display: inline-block;
        padding: 8px 18px;
        font-size: 16px;
        color: white;
        background-color: blue;
        text-align: center;
        text-decoration: none;
        border-radius: 5px;
    }

        .button:hover {
            background-color: darkblue;
            color: white;
        }
</style>
<h2>Department Details</h2>
<br />
<a href="/Department/List">Go back to List</a><br /><br />
<a href="/Department/DeleteConfirm/@Model.SelectedDepartment.DepartmentId" class="button">Delete Department</a>
<a href="/Department/Edit/@Model.SelectedDepartment.DepartmentId" class="button" style="margin-left:10px;margin-bottom:5px">Update Department</a><br />
<div>
    <p><strong>Department Id : </strong>@Model.SelectedDepartment.DepartmentId </p>
    <p><strong>Department Name : </strong>@Model.SelectedDepartment.DepartmentName </p>
    <p><strong>Department Manager : </strong>@Model.SelectedDepartment.DepartmentManager </p>
    <p><strong>No of Employees : </strong>@Model.SelectedDepartment.NoOfEmployees </p>

    <div>
        <h3>List of Emplpoyees in this Department</h3>
        @foreach (var employee in Model.RelatedEmployees)
        {
            <a href="/Employee/Details/@employee.EmployeeId">@employee.FirstName @employee.LastName</a>
            <br />

        }


    </div>

</div>

